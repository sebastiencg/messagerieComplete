{% extends 'base.html.twig' %}

{% block title %}Relation index{% endblock %}

{% block body %}
    <h1>Relation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for relation in relations %}
            <tr>
                <td>{{ relation.id }}</td>
                <td>
                    <a href="{{ path('app_relation_show', {'id': relation.id}) }}">show</a>
                    <a href="{{ path('app_relation_edit', {'id': relation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_relation_new') }}">Create new</a>
{% endblock %}
